@import ./components/header.gspec

@objects
    middle              id      content-container
    content             id      content
    aside               id      side-panel

= Main section =
    = content =
    content:
        height 220px
        inside middle
        @on desktop
            width 724px
        @on tablet
            width 340px
        @on mobile
            width 400px
    = aside =
    aside:
        height 220px
        inside middle
        @on desktop
            width 300px
        @on tablet
            width 300px
        @on mobile
            width 400px
